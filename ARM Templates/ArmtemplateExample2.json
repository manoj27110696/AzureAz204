{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "acg-lab-vmName": {
            "minLength": 1,
            "type": "String"
        },
        "acg-lab-vmAdminUserName": {
            "minLength": 1,
            "type": "String"
        },
        "acg-lab-vmAdminPassword": {
            "type": "SecureString"
        },
        "acg-lab-vmWindowsOSVersion": {
            "defaultValue": "2012-R2-Datacenter",
            "allowedValues": [
                "2008-R2-SP1",
                "2012-Datacenter",
                "2012-R2-Datacenter",
                "Windows-Server-Technical-Preview"
            ],
            "type": "String"
        },
        "acgstorageType": {
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_ZRS",
                "Standard_GRS",
                "Standard_RAGRS",
                "Premium_LRS"
            ],
            "type": "String"
        }
    },
    "variables": {
        "acg-lab-networkPrefix": "10.0.0.0/16",
        "acg-lab-networkSubnet1Name": "Subnet-1",
        "acg-lab-networkSubnet1Prefix": "10.0.0.0/24",
        "acg-lab-networkSubnet2Name": "Subnet-2",
        "acg-lab-networkSubnet2Prefix": "10.0.1.0/24",
        "acg-lab-vmImagePublisher": "MicrosoftWindowsServer",
        "acg-lab-vmImageOffer": "WindowsServer",
        "acg-lab-vmOSDiskName": "acg-lab-vmOSDisk",
        "acg-lab-vmVmSize": "Standard_B1s",
        "acg-lab-vmVnetID": "[resourceId('Microsoft.Network/virtualNetworks', 'acg-lab-network')]",
        "acg-lab-vmSubnetRef": "[concat(variables('acg-lab-vmVnetID'), '/subnets/', variables('acg-lab-networkSubnet1Name'))]",
        "acg-lab-vmStorageAccountContainerName": "vhds",
        "acg-lab-vmNicName": "[concat(parameters('acg-lab-vmName'), 'NetworkInterface')]",
        "acgstorageName": "[concat('acgstorage', uniqueString(resourceGroup().id))]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2015-06-15",
            "name": "acg-lab-network",
            "location": "[resourceGroup().location]",
            "dependsOn": [],
            "tags": {
                "displayName": "acg-lab-network"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('acg-lab-networkPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('acg-lab-networkSubnet1Name')]",
                        "properties": {
                            "addressPrefix": "[variables('acg-lab-networkSubnet1Prefix')]"
                        }
                    },
                    {
                        "name": "[variables('acg-lab-networkSubnet2Name')]",
                        "properties": {
                            "addressPrefix": "[variables('acg-lab-networkSubnet2Prefix')]"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2015-06-15",
            "name": "[variables('acg-lab-vmNicName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/', 'acg-lab-network')]"
            ],
            "tags": {
                "displayName": "acg-lab-vmNic"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('acg-lab-vmSubnetRef')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2015-06-15",
            "name": "[parameters('acg-lab-vmName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Storage/storageAccounts/', variables('acgstorageName'))]",
                "[concat('Microsoft.Network/networkInterfaces/', variables('acg-lab-vmNicName'))]"
            ],
            "tags": {
                "displayName": "acg-lab-vm"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[variables('acg-lab-vmVmSize')]"
                },
                "osProfile": {
                    "computerName": "[parameters('acg-lab-vmName')]",
                    "adminUsername": "[parameters('acg-lab-vmAdminUsername')]",
                    "adminPassword": "[parameters('acg-lab-vmAdminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('acg-lab-vmImagePublisher')]",
                        "offer": "[variables('acg-lab-vmImageOffer')]",
                        "sku": "[parameters('acg-lab-vmWindowsOSVersion')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "acg-lab-vmOSDisk",
                        "vhd": {
                            "uri": "[concat('http://', variables('acgstorageName'), '.blob.core.windows.net/', variables('acg-lab-vmStorageAccountContainerName'), '/', variables('acg-lab-vmOSDiskName'), '.vhd')]"
                        },
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('acg-lab-vmNicName'))]"
                        }
                    ]
                }
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2015-06-15",
            "name": "[variables('acgstorageName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [],
            "tags": {
                "displayName": "acgstorage"
            },
            "properties": {
                "accountType": "[parameters('acgstorageType')]"
            }
        }
    ]
}